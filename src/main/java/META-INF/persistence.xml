        <class>com.TV.SugerenciasTVD.DAO.Modelos.EntidadCategoria</class>
        <class>com.TV.SugerenciasTVD.DAO.Modelos.EntidadHistorial</class>
        <class>com.TV.SugerenciasTVD.DAO.Modelos.EntidadPrograma</class>
